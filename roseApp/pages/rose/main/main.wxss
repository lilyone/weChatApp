.main-container{
	height: 100%;
	display: flex;
	flex-direction: column;
	background: #eee;
}
button{
	border: 0 !important;
}
.main-nav{
	height: 50px;
	background: yellow;
}
swiper-item{
	height: 180px;
}
swiper {
	width: 100%;
	height: 180px;
}
swiper image{
	display: block;
	width: 100%;
	height: 100%;
}
scroll-view {
	height: 100%;
}
ul{
	flex: 1;
	display: flex;
	flex-wrap: wrap;
	padding: 6px 6px 0 0;
	background: #eee;
}
ul navigator {
	width: 50%;
	box-sizing: border-box;
	padding-left: 6px;
	/*margin-bottom: 6px;*/
	/*background: #fff;*/
}
ul navigator wx-image {
	width: 100%;
	height: 250px;
	border-radius: 8px;
	border: 0;
	padding: 0;
}

ul navigator p{
	font-size: 12px;
	display: block;
	color: #333;
	/*padding: 6px 0;*/
	background: #fff;
}
ul navigator p.price{
	color: #dd2727;
	font-weight: bold;
	padding: 0;
}
.nav{
	box-sizing: border-box;
	overflow: hidden;
	height: 80px;
	background: #eee;
	width: 100%;
	margin-top: 6px;
	padding: 0 6px;
	display: flex;
}
.nav span{
	flex: 1;
	height: 100%;
	display: flex;
	flex-direction: column;
	text-align: center;
	font-size: 12px;
	background: #fff;
}
.nav span image{
	width: 40px;
	height: 40px;
	margin: 0 auto;
	margin-top: 10px;
	margin-bottom: 4px;
}
